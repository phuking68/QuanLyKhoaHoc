<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyMonHocActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#126AEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ KHÓA HỌC"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerQuanLy"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:background="#FFF"/>-->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:id="@+id/item_DangKy_KhoaHoc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivDangKyKhoaHoc"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/register"
                android:layout_marginLeft="10dp"
                android:outlineSpotShadowColor="@color/black" />

            <TextView
                android:id="@+id/edtDangKyKhoaHoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký khóa học"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:id="@+id/item_KH_DaDangKy">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivKHDaDangKy"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/courses"
                android:layout_marginLeft="10dp"
                android:outlineSpotShadowColor="@color/black" />

            <TextView
                android:id="@+id/edtNameKHDaDangKy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khóa học đã đăng ký"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


  </LinearLayout>