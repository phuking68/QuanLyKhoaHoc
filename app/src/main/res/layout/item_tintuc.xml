<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    android:id="@+id/layout_item">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivTinTuc"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="3"

            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/neural" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtTitleNews"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:text="Quản lý trường mầm non bị tố bỏ đói, bạo hành trẻ"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingStart="14dp">

                <TextView
                    android:id="@+id/txtPubDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="Tue, 04 Oct 2022 07:54:52" />

                <TextView
                    android:id="@+id/txtCmt"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#2196F3"
                    android:paddingStart="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="Comment: 1"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>